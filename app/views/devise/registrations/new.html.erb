<h1>Sign up</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <h2>You</h2>
  <div class="row">
	  <div class="span4">
			<div style="float:left;margin-bottom:15px;">
				<div style="float:left;">
					<div class="flabel">First Name</div>
					<%= f.text_field :first_name, style: "width:120px;margin-right:17px;font-size:110%;" %>
				</div>
				<div style="float:left;">
					<div class="flabel">Last Name</div>
					<%= f.text_field :last_name, style: "width:120px;font-size:110%;" %>
				</div>
			</div>
			<div style="clear:both;">
				<div class="flabel">Email</div>
				<%= f.email_field :email, :autofocus => true, style: "font-size:110%;" %>
			</div>
			<div style="float:left;margin-bottom:15px;">
				<div style="float:left;">
					<div class="flabel">Password</div>
					<%= f.password_field :password, style: "width:120px;margin-right:17px;font-size:110%;" %>
				</div>
				<div style="float:left;">
					<div class="flabel">Confirmation</div>
					<%= f.password_field :password_confirmation, style: "width:120px;font-size:110%;" %>
				</div>
			</div>
		</div>
		<div class="span4">
			<div>
				<div class="flabel">Address</div>
				<%= f.text_field :address, style: "font-size:110%;" %>
			</div>
			<div style="float:left;margin-bottom:15px;">
				<div style="float:left;">
					<div class="flabel">City</div>
					<%= f.text_field :city, style: "width:120px;margin-right:17px;font-size:110%;" %>
				</div>
				<div style="float:left;">
					<div class="flabel">State</div>
					<%= f.select :state, User::STATES, { include_blank: true }, style: "width:133px;" %>
				</div>
			</div>
			<div style="clear:both;">
				<div class="flabel">Zip Code</div>
				<%= f.text_field :zip_code, style: "font-size:110%;" %>
			</div>
		</div>
	</div>

	<h2>Your Little One</h2>
	<div class="row">
	  <%= f.fields_for :children do |builder| %>
			<div class="span4">
				<div style="float:left;margin-bottom:15px;">
					<div style="float:left;">
						<div class="flabel">First Name</div>
						<%= builder.text_field :first_name, style: "width:120px;margin-right:17px;font-size:110%;" %>
					</div>
					<div style="float:left;">
						<div class="flabel">Last Name</div>
						<%= builder.text_field :last_name, style: "width:120px;font-size:110%;" %>
					</div>
				</div>
			</div>
			<div class="span4">
				<div style="clear:both;">
					<div class="flabel">Birthday</div>
					<%= builder.text_field :birthday, style: "font-size:110%;", placeholder: "mm/dd/yyyy" %>
				</div>
			</div>
		<% end %>
	</div>

	<h2>Distribution List</h2>
	<div>
    <%= f.fields_for :sendees do |builder| %>
      <%= render 'sendee_fields', f: builder %>
    <% end %>
    <%= link_to_add_fields "Add", f, :sendees %>
  </div>

  <br>
	<%= f.submit "Sign up", class: "submit" %>
<% end %>

<div style="margin:20px 0 0 0"><%= render "devise/shared/links" %></div>
