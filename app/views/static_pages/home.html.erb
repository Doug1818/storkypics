<h1>Storkypics</h1>

<h2 style="text-align:center;">SIGN UP FOR THE LAUNCH!</h2>
<%= form_for @subscriber do |f| %>
  <div style="margin-left:auto;margin-right:auto;width:49%;">
  	<%= render 'shared/error_messages', object: f.object %>
    <span><%= f.text_field :first_name, style: "width: 100px", placeholder: "first name" %></span>
    <span><%= f.text_field :last_name, style: "width: 100px;margin-right: 20px;", placeholder: "last name" %></span>  
    <span><%= f.text_field :email, style: "margin-right: 20px;", placeholder: "email" %></span>
    <%= f.submit "Submit", class: "btn btn-small", style: "position:relative;bottom:5px;" %>
  </div>
<% end %>