<% if Picture.of_user(current_user).all != [] %>
<div id="myCarousel" class="carousel slide" style="margin-left:auto;margin-right:auto;width:500px;margin-top:50px;">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <% Picture.of_user(current_user)[1..-1].each_with_index do |picture, idx| %>
	    <li data-target="#myCarousel" data-slide-to="<%= idx + 1 %>"></li>
    <% end %>
  </ol>
  <!-- Carousel items -->
  <div class="carousel-inner">
    <div class="active item"><%= image_tag(Picture.of_user(current_user).first.pic.url(:large)) %></div>
    <% Picture.of_user(current_user)[1..-1].each do |picture| %>
	    <div class="item"><%= image_tag(picture.pic.url(:large)) if picture.pic_content_type %></div>
    <% end %>
  </div>
  <!-- Carousel nav -->
  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div>
<% else %>
<div class="center-pic">
	<%= link_to image_tag('mailbox.jpg', class: "product-pic"), new_order_path %>
	<%= link_to "Send Pics", new_order_path, class: "send-pics-btn" %>
</div>
<% end %>



<br><br>
<h2>Your little one</h2>
<p>
	<span style="font-weight:bold;"><%= "#{current_user.children.first.first_name} #{current_user.children.first.last_name}" %></span><br>
	<%= "Born #{current_user.children.first.birthday.strftime("%B %d, %Y")}" %>
</p>
<div style="margin-top:10px;">
	<%= link_to "Edit", edit_child_path(current_user.children.first), class: "links" %>
</div>

<br><br>
<h2>Your Distribution list</h2>

<div style="margin:10px 0;">
<%= link_to "Add Recipient", new_sendee_path, class: "links" %>
</div>

<% current_user.sendees.each do |sendee| %>
	<p>
		<span style="font-weight:bold;"><%= "#{sendee.first_name} #{sendee.last_name}" %></span><br>
		<%= sendee.address %><br>
		<%= "#{sendee.city}, #{sendee.state}, #{sendee.zip_code}" %>
	</p>
	<div style="margin-top:10px;">
		<%= link_to "Edit", edit_sendee_path(sendee), class: "links" %> | 
		<%= link_to "Delete", sendee, method: :delete, confirm: "You sure?", class: "links" %>
	</div><br>
<% end %>