<h1>Sign in</h1>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
	<div class="flabel">Email</div>
	<%= f.email_field :email, :autofocus => true, style: "font-size:110%;" %>

	<div class="flabel">Password</div>
	<%= f.password_field :password, style: "font-size:110%;" %>

	<% if devise_mapping.rememberable? -%>
	<div>
		<%= f.check_box :remember_me, style: "float:left;margin-right:10px;margin-bottom:10px;" %>
		<%= f.label :remember_me, style: "float:left;position:relative;top:14px;" %>
	</div>
	<% end %>

	<div style="clear:both;margin-bottom: 20px;"><%= f.submit "Sign in", class: "submit" %></div>
<% end %>

<%= render "devise/shared/links" %>
